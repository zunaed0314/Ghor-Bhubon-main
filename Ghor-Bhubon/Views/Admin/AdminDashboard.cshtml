@{
    ViewData["Title"] = "Admin DashBoard";
}

<!-- Sidebar -->
<div id="sidebar" class="sidebar bg-dark position-fixed" style="width: 250px; left: -250px; height: 100%; transition: 0.3s;">
    <ul class="nav flex-column text-white p-3">
        <li class="nav-item">
            <a class="nav-link text-white" href="@Url.Action("Profile", "Admin")">Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" href="@Url.Action("PendingPosts", "Admin")">Pending Posts</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" href="@Url.Action("Expenses", "Admin")">Expenses</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" href="@Url.Action("ManageUsers", "Admin")">Manage Users</a>
        </li>
    </ul>
</div>

<!-- Hamburger Button (Three Stacked Lines) -->
<div id="toggleSidebar" class="d-flex flex-column justify-content-center align-items-center" style="width: 40px; height: 40px; position: fixed; top: 10px; left: 20px; cursor: pointer; transition: 0.3s;">
    <div style="width: 30px; height: 3px; background-color: black; margin: 2px 0;"></div>
    <div style="width: 30px; height: 3px; background-color: black; margin: 2px 0;"></div>
    <div style="width: 30px; height: 3px; background-color: black; margin: 2px 0;"></div>
</div>

<!-- Style for Hover and Click Effects -->
<style>
    /* Hover effect for the sidebar links */
    #sidebar .nav-link {
        transition: background-color 0.3s, color 0.3s, transform 0.3s, text-shadow 0.3s;
    }

        /* 3D text effect on hover */
        #sidebar .nav-link:hover {
            background-color: #495057; /* Darker background on hover */
            color: #fff; /* Change text color on hover */
            transform: translateX(5px) translateY(-5px); /* 3D movement effect */
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.4), -2px -2px 5px rgba(0, 0, 0, 0.4); /* Text shadow for depth */
        }

        /* Active/Click effect for the sidebar links */
        #sidebar .nav-link.active {
            background-color: #007bff; /* Highlight color when clicked */
            color: #fff;
        }

    /* Hover effect on hamburger button */
    #toggleSidebar div {
        transition: background-color 0.3s;
    }

        #toggleSidebar div:hover {
            background-color: #555; /* Darken the lines when hovered */
        }
</style>

<!-- Script for Sidebar -->
<script>
    document.getElementById("toggleSidebar").addEventListener("click", function() {
        var sidebar = document.getElementById("sidebar");
        var button = document.getElementById("toggleSidebar");

        // Check if sidebar is open
        if (sidebar.style.left === "0px") {
            sidebar.style.left = "-250px";  // Close sidebar
            button.style.left = "20px";     // Move button back outside
        } else {
            sidebar.style.left = "0px";     // Open sidebar
            button.style.left = "250px";    // Move button inside the sidebar
        }
    });

    // Add click effect to each link
    const navLinks = document.querySelectorAll("#sidebar .nav-link");
    navLinks.forEach(link => {
        link.addEventListener("click", function() {
            navLinks.forEach(l => l.classList.remove("active"));
            link.classList.add("active");
        });
    });
</script>

